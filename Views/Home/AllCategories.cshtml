@model List<Category>
<h4>Below is the list of all the product categories our vendors are offering<h4>
<table class="table table-hover">
@foreach (var c in Model)
{
    <thead>
        <tr>
            <th>@c.Name</th>
        </tr>
    </thead>
    @foreach (var p in c.ProductCategories)
    {
    <tbody>
        <tr>
            <td><a href="/product/@p.Product.ProductId" class="list-group-item">@p.Product.Name</a></td>
        </tr>
    </tbody>
    }
}
</table>